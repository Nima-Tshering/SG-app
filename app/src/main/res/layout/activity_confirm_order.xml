<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfirmOrder">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/app_bar_allhomestay"
        android:background="@color/colorPrimary"
        >
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_setting"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_arrow_back"
                    android:id="@+id/back_btn"
                    android:textColor="@color/colorText"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:layout_alignParentStart="true"
                    />


                <TextView
                    android:id="@+id/update_settings_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginStart="120dp"



                    android:text="Book Now"
                    android:textColor="@color/colorText"
                    android:textSize="17sp"
                    android:textStyle="bold" />

            </RelativeLayout>


        </android.support.v7.widget.Toolbar>



    </android.support.design.widget.AppBarLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_bar_allhomestay"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:textSize="20sp"
        android:id="@+id/header"
       android:gravity="center"
        android:text="Please Fill Details for Reservation"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:layout_marginTop="40dp"
        android:hint="Your Full Name"
        android:id="@+id/confirmname"
        android:textColorHint="#000000"
        android:paddingStart="10dp"
        />
<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/confirmname"
    android:id="@+id/email"
    android:hint="Your Email Id"
    android:layout_marginTop="20dp"
    android:textColorHint="#000000"
    android:paddingStart="10dp"
    />
<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/email"
    android:id="@+id/confirmnumber"
    android:hint="Your Contact Number"
    android:layout_marginTop="20dp"
    android:textColorHint="#000000"
    android:paddingStart="10dp"
    />
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_below="@id/confirmnumber"
       android:id="@+id/layouttwo"
       android:orientation="horizontal"
       android:gravity="center"
       android:layout_marginTop="10dp"
       >
       <EditText
           android:layout_width="160dp"
           android:layout_height="wrap_content"
           android:layout_marginStart="5dp"
           android:hint="Arrival Date"
           android:textColorHint="#000000"
           android:paddingStart="10dp"
           android:inputType="date"
           android:ems="10"

           android:id="@+id/arrival"
           />
       <EditText
           android:layout_width="160dp"
           android:layout_height="wrap_content"
           android:layout_marginStart="5dp"
           android:hint="Departure Date"
           android:id="@+id/departure"
           android:inputType="date"
           android:ems="10"
           android:textColorHint="#000000"
           android:paddingStart="10dp"

           />

   </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/confirmbook"
        android:layout_marginTop="40dp"
        android:background="@drawable/button"
        android:layout_below="@id/layouttwo"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:text="Book Now"
        android:textColor="@color/colorText"
        android:padding="10dp"
        android:textSize="20sp"

        />



</RelativeLayout>