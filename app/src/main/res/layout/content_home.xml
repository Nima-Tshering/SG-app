<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorText"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Home"
    tools:showIn="@layout/app_bar_home">


  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:id="@+id/home_scroll"
      android:background="@color/colorText"
      >

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"

          android:orientation="vertical"
          android:background="#DAE0E2"

          >
          <ImageView
              android:layout_width="match_parent"
              android:layout_height="300dp"
              android:id="@+id/sliderImage"
              android:background="@drawable/slideranimation"
              />
          <RelativeLayout
              android:layout_marginTop="10dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/colorText"

              >
              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                    android:text="SkkmGenuine Capital"
                  android:textStyle="bold"
                  android:id="@+id/cap"
                  android:layout_marginStart="15dp"
                  android:textSize="18sp"
                  android:textAllCaps="true"
                  android:textColor="#000000"
                  />
              <ImageView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                    android:id="@+id/home_capital"
                  android:src="@drawable/home_capital"
                  />


          </RelativeLayout>
          <RelativeLayout
              android:layout_marginTop="10dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/colorText"
              >
              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="SkkmGenuine north sikkim"
                  android:textStyle="bold"
                  android:id="@+id/north"
                  android:layout_marginStart="15dp"
                  android:textSize="18sp"
                  android:textAllCaps="true"
                  android:textColor="#000000"
                  />
              <ImageView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginStart="10dp"
                  android:layout_marginEnd="10dp"
                  android:id="@+id/home_north"
                  android:src="@drawable/home_north"
                  />


          </RelativeLayout>
          <RelativeLayout
              android:layout_marginTop="10dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/colorText"
              >
              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Skkmgenuine under Rs 1500/-"
                  android:textStyle="bold"
                  android:id="@+id/cheap"
                  android:layout_marginStart="15dp"
                  android:textSize="18sp"
                  android:textAllCaps="true"
                  android:textColor="#000000"
                  />
              <ImageView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                android:id="@+id/home_cheap"
                  android:src="@drawable/home_cheap"
                  />


          </RelativeLayout>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"

    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginStart="15dp"
        android:textColor="#000000"
        android:id="@+id/reone"
        android:layout_marginBottom="5dp"
        android:text="Skkmgenuine menu"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/homeone"
        android:layout_below="@+id/reone"
        android:gravity="center"
        >

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/allrooms"
            android:layout_marginStart="10dp"
            android:id="@+id/home_room"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            />
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:id="@+id/home_gallery"
            android:layout_marginBottom="10dp"
            android:src="@drawable/gallery"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/homeone"
        android:gravity="center"
        >
    <ImageView
        android:layout_width="150dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:id="@+id/home_about"
        android:layout_marginBottom="10dp"
        android:layout_height="150dp"
        android:src="@drawable/aboutus"
        />
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/contactus"
        android:id="@+id/home_contact"
        />
    </LinearLayout>

</RelativeLayout>




      </LinearLayout>

  </ScrollView>

</RelativeLayout>